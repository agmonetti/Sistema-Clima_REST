<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<main class="main-content">
    <div class="container">
        <div class="page-header">
            <h1>➕ Nuevo Sensor</h1>
            <a href="/sensores" class="btn btn-outline">← Volver</a>
        </div>

        <div class="form-container">
            <form action="/sensores" method="POST" class="form-card">
                <h2>Información del Sensor</h2>
                
                <div class="form-group">
                    <label for="nombre">Nombre del Sensor *</label>
                    <input type="text" id="nombre" name="nombre" required 
                           placeholder="Ej: Sensor Centro BA" class="form-control">
                </div>

                <h3>Configuración</h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="tipo_sensor">Tipo de Sensor *</label>
                        <select name="tipo_sensor" id="tipo_sensor" required class="form-control">
                            <option value="">Seleccionar...</option>
                            <option value="temperatura">Temperatura</option>
                            <option value="humedad">Humedad</option>
                            <option value="temperatura/humedad">Temperatura/Humedad</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="estado_sensor">Estado Inicial</label>
                        <select name="estado_sensor" id="estado_sensor" class="form-control">
                            <option value="activo">Activo</option>
                            <option value="inactivo">Inactivo</option>
                        </select>
                    </div>
                </div>

                <h3>Ubicación</h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="pais">País *</label>
                        <input type="text" id="pais" name="pais" required 
                               placeholder="Ej: Argentina" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <label for="ciudad">Ciudad *</label>
                        <input type="text" id="ciudad" name="ciudad" required 
                               placeholder="Ej: Buenos Aires" class="form-control">
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="lat">Latitud *</label>
                        <input type="number" id="lat" name="lat" required step="any"
                               placeholder="Ej: -34.6037" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <label for="lon">Longitud *</label>
                        <input type="number" id="lon" name="lon" required step="any"
                               placeholder="Ej: -58.3816" class="form-control">
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Crear Sensor</button>
                    <a href="/sensores" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
